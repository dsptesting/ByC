<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="10dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/tvDate"
                android:text="Palak Darji Suresh"
                android:textColor="#444"
                android:textSize="16sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvCustomerMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvCustomerName"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tvTime"
                android:text="09662519798 "
                android:textColor="#444"
                android:textSize="16sp" />

            <LinearLayout
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19, Dec THU"
                    android:textColor="#444"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:20 AM"
                    android:textColor="#444"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvSrc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCustomerMobile"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="SRC"
                android:textColor="#777"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvSrcValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSrc"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="163, Ajit nagar dsfdsfdsfsdfdsafdsafdsafds sdf dsfdfdsfdsf"
                android:textColor="#444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSrcValue"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="DES"
                android:textColor="#777"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvDesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDes"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="163, Ajit nagar "
                android:textColor="#444"
                android:textSize="16sp" />

            <LinearLayout
                android:padding="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvKms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="4.6 kms"
                    android:textColor="#444"
                    android:textSize="16sp" />
                <TextView
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="+"
                    android:textColor="#444"
                    android:textSize="16sp" />
                <TextView

                    android:id="@+id/tvMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 min ride"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPlus2"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="+"
                    android:textColor="#444"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tvWaitTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 min hold"
                    android:textColor="#444"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_gravity="right"
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvDesValue"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"

                android:text="Approx Rs 62 - Rs 78"
                android:textColor="#444"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/rlActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPrice"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/llCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/llOk"
                    android:background="@drawable/trans_selector"
                    android:clickable="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        android:textColor="#777"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/trans_selector"
                    android:clickable="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvAccept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACCEPT"
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>